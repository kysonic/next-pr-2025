{
    "editor.defaultFormatter": "biomejs.biome",
    "[javascript]": {
        "editor.defaultFormatter": "biomejs.biome"
    },
    "[typescript]": {
        "editor.defaultFormatter": "biomejs.biome"
    },
    "editor.formatOnSave": true,
    "files.associations": {
        "*.css": "tailwindcss",
        "*.tsx": "typescriptreact"
    },
    "tailwindCSS.classAttributes": ["class", "className", "theme"],
    "tailwindCSS.experimental.classRegex": [
        ["twMerge\\(([^)]*)\\)", "[\"'`]([^\"'`]*).*?[\"'`]"],
        [
            "createTheme(?:<\\w+>)?\\s*\\(([^)]*)\\)",
            "{?\\s?[\\w].*:\\s*?[\"'`]([^\"'`]*).*?,?\\s?}?"
        ]
    ]
}
